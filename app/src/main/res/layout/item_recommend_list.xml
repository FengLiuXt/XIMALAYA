<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/item_bg">

    <ImageView
        android:id="@+id/image"
        android:layout_width="68dp"
        android:layout_height="65dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="10.5dp"
        android:layout_marginBottom="2.5dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:layout_marginBottom="10.5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/views_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_alignLeft="@id/title"
        android:textColor="@color/grey"
        android:textSize="7sp"
        android:drawableLeft="@mipmap/play_info_icon"
        android:gravity="center"/>

    <TextView
        android:id="@+id/episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_toRightOf="@id/views_number"
        android:layout_marginLeft="29dp"
        android:drawableLeft="@mipmap/ic_sound"
        android:layout_alignBaseline="@id/views_number"
        android:textSize="7sp"
        android:gravity="center"/>

</RelativeLayout>